<div class="row">
  <div class="large-1 columns"></div>
  <div class="large-10 small-12 columns">
    <ul class="mall-block-grid-1">
      <li><div id="route_map" class="large-10 columns map"></div></li>
    </ul>
  </div>
  <div class="large-1 columns"></div>
</div>

