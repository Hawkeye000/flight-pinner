<script>

var handler = Gmaps.build('Google');
handler.buildMap({
  internal: {id:'route_map'},
  provider: {styles: mapStyle}},
  function(){
    var markers = handler.addMarkers(<%=raw @airports.to_json %>);
    var lineSymbol = { path: google.maps.SymbolPath.FORWARD_CLOSED_ARROW, strokeColor: '#6C7D7D' };
    var polylines = handler.addPolylines(
        <%=raw @polylines.to_json %>,
        { icons:[{icon: lineSymbol,
          offset: '100%'}] ,
          strokeColor: '#6C7D7D' });
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
});
</script>
