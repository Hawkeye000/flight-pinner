<div class="row">
  <div class="small-12 columns">
    <h1><%= @airline.name %></h1>
    <p>
      <b>Based In:</b> <%= @airline.country %>
    </p>
    <p>
      <b>Routes Flown:</b> <%= @airline.routes_count %>
    </p>
    <p>
      <%= link_to "See all Routes", airline_routes_path(airline_id:@airline.id) %>
    </p>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <h3>Serving Airports:</h3>
    <table>
      <thead>
        <th>Airport</th>
        <th>IATA/FAA</th>
        <th>City</th>
        <th>Country</th>
      </thead>
      <tbody>
        <% @airline.airports.each do |airport| %>
          <tr>
            <td><%= link_to airport.name, airport_path(airport) %></td>
            <td><%= airport.iata_faa %></td>
            <td><%= airport.city %></td>
            <td><%= airport.country %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
