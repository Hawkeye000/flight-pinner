<%= render 'map_of_airports' %>
<%= render 'shared/iata_faa_search' %>
<%= paginate @airports %>
<table width="100%">
  <tr>
    <th><%= sortable :name, "Name" %></th>
    <th><%= sortable :iata_faa, "IATA/FAA" %></th>
    <th><%= sortable :icao, "ICAO" %></th>
    <th><%= sortable :latitude, "Lat" %></th>
    <th><%= sortable :longitude, "Long" %></th>
  </tr>
  <% @airports.each do |a| %>
    <tr>
      <td><%= link_to a.name, airport_path(a) %></td>
      <td><%= a.iata_faa %></td>
      <td><%= a.icao %></td>
      <td><%= a.latitude %></td>
      <td><%= a.longitude %></td>
    </tr>
  <% end %>
</table>
<%= paginate @airports %>
